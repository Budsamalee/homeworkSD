<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1e0e0"
    tools:context="com.budsamalee.myapplication.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/drawable_shape"
            android:fontFamily="monospace"
            android:text=" Starbucks "
            android:textColor="#0B5345"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.018" />
        <TextView
            android:id="@+id/tx2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:background="#7DCEA0"
            android:fontFamily="monospace"
            android:text="...Starbucks Thailand..."
            android:textColor="#000"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/im"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/bucks"
            android:layout_below="@id/tx2" />

        <TextView
            android:id="@+id/tx3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/im"
            android:background="#7DCEA0"
            android:text="Your favorite menu in Stabucks?"
            android:textColor="#0B5345"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkbox_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tx3"
            android:checked="true"
            android:onClick="onCheckboxClicked"
            android:text="Cotton Candy Frappuccino" />

        <CheckBox
            android:id="@+id/checkbox_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkbox_1"
            android:onClick="onCheckboxClicked"
            android:checked="true"
            android:text="Cookies and Cream or Oreo Frappuccino" />

        <CheckBox
            android:id="@+id/checkbox_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkbox_2"
            android:onClick="onCheckboxClicked"
            android:checked="true"
            android:text="Candy Cane Frappuccino" />

        <TextView
            android:id="@+id/tx4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkbox_3"
            android:background="#7DCEA0"
            android:text="What is the menu?"
            android:textColor="#0B5345"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/in"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/bb"
            android:layout_below="@id/tx4" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/in">

            <RadioButton
                android:id="@+id/radio_r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Double chocolate green tea Frappuccino" />

            <RadioButton
                android:id="@+id/radio_r2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Cotton Candy Frappuccino" />

            <RadioButton
                android:id="@+id/radio_r3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Candy Cane Frappuccino" />

            <RadioButton
                android:id="@+id/radio_r4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Chestnut White Chocolate Truffle drink" />

            <RadioButton
                android:id="@+id/radio_r5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Cookies and Cream or Oreo Frappuccino" />

        </RadioGroup>
    </RelativeLayout>
</ScrollView>
